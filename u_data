 
package user;
import java.util.*;
 
public class u_data {
    
    String name;
    String password;
    int height;
    int weight;
    int age;
    int goal;
    int bmi;
    Vector weight_track=new Vector(); 
    public u_data(String name,String password,int height,int weight,int age){
        this.name=name;
        this.password=password;
        this.age=age;
        this.height=height;
        this.weight=weight;
        weight_track.add(weight);
        goal=0;
    }
    public int bmi_calc(){
       bmi=weight/(height*height);
        return bmi;
     }
    public int bmi_range(){
    bmi_calc();
        if(bmi<20)
            return 1;
         if(bmi<=25)
            return 2;
         if(bmi<30)
            return 3;
         if(bmi<35)
             return 4;
         if(bmi>35)
             return 5;
        
        return 0;

    }
    public int set_goal(){
        int range=bmi_range();
        switch(range){
            case 1: goal=20-bmi;
            //too thin
                    break;
            case 2: goal=0;
            //ideal
                    break;
            case 3: goal=bmi-25;
            //overweight
                    break;
            case 4: goal=bmi-25;
            //obese
                    break;
            case 5: goal=bmi-25;
            //severly obese;
                    break;
        }
        return goal;
    }
            
}
